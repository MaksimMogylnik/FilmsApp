@page "{film:int?}"
@model WebApplication1.Pages.FilmsListModel
@{
}

<a href="/FilmsList"> Back </a>

<table class="table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Produser</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (RouteData.Values["film"] == null)
            {
                @for (int i = 0; i < Model.filmsService.Films.Count; i++)
                {
                    <tr>
                        <td>
                            <a href="/FilmsList/@i"> @Model.filmsService.Films[i].FilmName </a>
                        </td>
                        <td>@Model.filmsService.Films[i].Produser</td>
                    </tr>
                }
            }
            else
            {
                @for (int i = 0; i < Model.filmsService.Films.Count; i++)
                {
                    <tr>
                        <td>
                            <a href="/FilmsList/@i"> @Model.filmsService.Films[i].FilmName </a>
                            @if (Convert.ToInt32(RouteData.Values["film"]) == i)
                            {
                                <p> @Model.filmsService.Films[i].Style; </p>

                                <p> @Model.filmsService.Films[i].About; </p>

                                <p> @foreach (var str in @Model.filmsService.Films[i].Sessions)
                                {
                                    <span> @str </span>
                                } </p>
                            }
                        </td>
                        <td>@Model.filmsService.Films[i].Produser</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
